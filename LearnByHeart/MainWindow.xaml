<Window x:Class="LearnByHeart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnByHeart"
        mc:Ignorable="d"
        Title="Learn by Heart"
        Height="450"
        Width="600"
        Background="White"
        Icon="Resources/heart.png"
        ResizeMode="NoResize"
        HorizontalAlignment="Left">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem DockPanel.Dock="Right">
                <TextBlock Name="StatusBar">
                </TextBlock>
            </StatusBarItem>
            <!--
                Empty status bar item because default StatusBarItem container
                DockPanel makes last item fill all the space and align to the left
            -->
            <StatusBarItem>
            </StatusBarItem>
        </StatusBar>
        <ContentControl x:Name="MainContent">
        </ContentControl>
    </DockPanel>
</Window>
